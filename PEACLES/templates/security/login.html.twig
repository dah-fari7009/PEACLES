{% extends 'base.html.twig' %}

{% block title %}Log in !{% endblock %}

{% block body %}
<div class="row">
<div class="col-lg-4 ">
</div>
<div class="col-lg-4 centered" style="margin:2% auto;text-align:center">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail" class="sr-only" style="margin:2%">Your Email : </label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" style="margin:2%" required autofocus>
    <label for="inputPassword" class="sr-only" style="margin:2%">Your Password : </label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" style="margin:2%" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-danger" type="submit" style="margin:2%">
        Sign in
    </button>
</form>
</div>
<div class="col-lg-4 ">
</div>
</div>
{% endblock %}
